  "shortcuts": [
    {
      "name": "Add Contact",
      "short_name": "Add Contact",
      "description": "Quickly add a new whitelisted contact",
      "url": "/?action=add-contact",
      "icons": [
        {
          "src": "/icons/shortcut-add-contact.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Call Logs",
      "short_name": "Logs", 
      "description": "View recent call activity",
      "url": "/?action=view-logs",
      "icons": [
        {
          "src": "/icons/shortcut-logs.png",
          "sizes": "192x192", 
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Blacklist",
      "short_name": "Blacklist",
      "description": "Manage blocked numbers",
      "url": "/?action=manage-blacklist", 
      "icons": [
        {
          "src": "/icons/shortcut-blacklist.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],

  "related_applications": [],
  "prefer_related_applications": false,

  "display_override": ["standalone", "minimal-ui", "browser"],

  "protocol_handlers": [
    {
      "protocol": "tel",
      "url": "/?tel=%s"
    }
  ],

  "file_handlers": [],

  "share_target": {
    "action": "/share-contact",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "name",
      "text": "phone",
      "url": "contact_url"
    }
  },

  "launch_handler": {
    "client_mode": "focus-existing"
  },

  "edge_side_panel": {
    "preferred_width": 400
  },

  "permissions": [
    "background-sync",
    "background-fetch", 
    "notifications",
    "push"
  ],

  "features": [
    "CrossOriginEmbedderPolicyCredentialless"
  ]
}